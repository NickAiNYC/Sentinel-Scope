# SiteSentinel-AI - Environment Variables
# Copy this file to .env and fill in your API keys

# =============================================================================
# ENTERPRISE VLM CONFIGURATION (SOC2-Compliant, US-Based Providers)
# =============================================================================

# VLM Provider Selection
# Options: "openai-gpt4o" (default) | "anthropic-claude"
# All providers are SOC2 Type II certified with US-based infrastructure
VLM_PROVIDER=openai-gpt4o

# OpenAI GPT-4o Vision API Key (Recommended for production)
# Get one from: https://platform.openai.com/api-keys
# SOC2 Type II certified, US-based (us-east-1)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude 3.5 Sonnet API Key (Alternative)
# Get one from: https://console.anthropic.com/
# SOC2 Type II certified, US-based
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Data Residency Configuration
# Options: "us-east-1" (default) | "us-west-2" | "nyc"
# Enforces geographic data storage requirements for compliance
DATA_RESIDENCY=us-east-1

# =============================================================================
# LEGACY DEEPSEEK SUPPORT (For migration/testing only)
# =============================================================================
# DeepSeek API Key (deprecated in production)
# Get one from: https://platform.deepseek.com/api_keys
# NOTE: Non-US provider, use only for development/testing
# DEEPSEEK_API_KEY=your_deepseek_api_key_here

# =============================================================================
# NYC OPEN DATA INTEGRATION
# =============================================================================

# NYC Open Data App Token (optional, for higher rate limits)
# Get one from: https://data.cityofnewyork.us/profile/edit/developer_settings
NYC_DATA_APP_TOKEN=your_nyc_data_app_token_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Connection (with RLS multi-tenancy)
DATABASE_URL=postgresql://user:password@localhost:5432/sitesentinel
DEFAULT_ORG_ID=00000000-0000-0000-0000-000000000001

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================

# S3/Cloudinary for image evidence storage
AWS_S3_BUCKET=site-evidence-uploads
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_REGION=us-east-1

# Alternative: Cloudinary
# CLOUDINARY_CLOUD_NAME=your_cloud_name
# CLOUDINARY_API_KEY=your_api_key
# CLOUDINARY_API_SECRET=your_api_secret

# =============================================================================
# SECURITY & COMPLIANCE
# =============================================================================

# JWT Secret for authentication
JWT_SECRET=your_secure_random_secret_here_minimum_32_characters

# Session configuration
SESSION_TIMEOUT_HOURS=24

# Rate limiting
RATE_LIMIT_PER_MINUTE=100

# =============================================================================
# DEPLOYMENT & MONITORING
# =============================================================================

# Environment
NODE_ENV=production
PYTHON_ENV=production

# Logging
LOG_LEVEL=INFO
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# =============================================================================
# SUPABASE (Optional for dashboard features)
# =============================================================================
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_ANON_KEY=your-anon-key-here

# =============================================================================
# INTERVIEW/DEMO MODE
# =============================================================================

# Enable pre-populated demo tenant for interviews
INTERVIEW_MODE=false
DEMO_TENANT_ID=demo-tenant-uuid
